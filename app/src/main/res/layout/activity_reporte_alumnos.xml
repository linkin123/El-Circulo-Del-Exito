<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7cf95"
    android:fitsSystemWindows="true"
    tools:context=".ui.listaAlumnos.ListaAlumnosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etSearchBox"
            android:layout_margin="5dp"
            style="@style/EditTextFind"
            android:layout_above="@+id/audio_rv"
            android:hint="@string/buscar" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/news_white"
            android:background="@drawable/btn"
            android:text="registro de pagos"

            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/audio_rv"
            android:background="@color/news_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:padding="5dp"
            android:layout_margin="10dp"
            app:layout_anchor="@id/etSearchBox"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

